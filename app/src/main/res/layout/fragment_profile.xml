<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">


    <LinearLayout
        android:id="@+id/profileForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            app:srcCompat="@drawable/ic_account_circle_black_100dp"
            tools:ignore="ContentDescription,VectorDrawableCompat" />

        <TextView
            android:id="@+id/profileTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            tools:ignore="HardcodedText,SpUsage"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/email"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/contactNo"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/Password"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/address"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/postalCode"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Postal Code"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <TextView
            android:id="@+id/profileTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Card Information"
            android:textSize="20dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <EditText
            android:id="@+id/ccExpiryDate"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Credit Card Number"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/ccNum"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <EditText
            android:id="@+id/ccCVV"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="CVS Code"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="20dp"
            tools:ignore="Autofill,HardcodedText,SpUsage,TextFields"
            android:textOff="Disable"
            android:textOn="Enable"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"/>

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>